<%- include header.ejs %>

  <% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
  <% } %>

  <% if (messages.success) { %>
      <p style="color:green"><%- messages.success %></p>
  <% } %>

    <div class="py-1 text-center">
        <img class="d-block mx-auto mb-4" src="/images/icone_certifico_site.png" alt="" width="72" height="72">
        <h2>Cadastro de Evento.</h2>
    </div>

    <br>
    <br>

    <div class="row">
        <div class="col-md-12 order-md-1">
            <form class="needs-validation" action="/evento" method="POST" novalidate>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="nome">Nome </label>
                        <input type="text" class="form-control" id="firstName" name="nome" placeholder="" value="" required>
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="instituicao">Instituição/Local </label>
                        <select class="custom-select d-block w-100" id="layout" name="id" required>
                              <option value="">Escolha...</option>

                                <% if(data.length){

                                  for(var i = 0; i< data.length; i++) {%>

                                <option value="<%= data[i].id%>"><%= data[i].nome%></option>

                                <% }

                                 }else{ %>
                                      <option value=""> Nenhuma informação do Banco de Dados</option>
                                  <% } %>

                              </select>

                        <div class="invalid-feedback">
                            Please provide a valid state.
                        </div>
                    </div>
                </div>
                <br>
                <button class="btn btn-primary btn-lg btn-block" type="submit" name="evento">Confirmar</button>
            </form>
        </div>
    </div>

<%- include footer.ejs %>
